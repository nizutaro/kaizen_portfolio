<!DOCTYPE html>
<html>
  <head>
    <title>Kaizen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--awesomeの導入-->
  <script src="https://kit.fontawesome.com/9f81cad960.js" crossorigin="anonymous"></script>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <!--gem gonの導入-->
    <%= include_gon %>
   </head>

  <body>
    <header class="navbar navbar-fixed-top bg-light">
      <div class= "container-fluid">
        <div class= "row">
          <div class= "col-md-5 nav-header-logo" >
             <%= link_to(image_tag('logo_1.png'), root_path) %>
          </div>
          <div class= "col-md-1">
          </div>
          <div class= "col-md-6 nav-header-list">
            <% if user_signed_in? %>
              <%= link_to("マイページ",user_path(current_user.id)) %>
              <%= link_to("提案する",new_project_path) %>
              <%= link_to("提案一覧",projects_path) %>
              <%= link_to("会員一覧",users_path) %>
              <%= link_to("職業一覧",jobs_path) %>
              <%= link_to(" ログアウト", destroy_user_session_path) %>
            <% else %>
              <%= link_to("about",root_path)%>
              <%= link_to("提案一覧",projects_path) %>
              <%= link_to("会員一覧",users_path) %>
              <%= link_to("ログイン", new_user_session_path)%>
              <%= link_to("会員登録", new_user_registration_path)%>
            <% end %>
          </div>  
        </div>
      </div>
    </header>
    <div class= "container-fluid text-center">
      <%= yield %>
    </div>
      <footer>
        <div class="row">
            <div class="col-md-4">
              <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="fab fa-twitter-square" data-hashtags="KAIZENを使ってみよう！" data-show-count="false"></a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
              <a href="https://github.com/nizutaro/kaizen_portfolio" class="fab fa-github"></a>
            </div>

            <div class="col-md-4">
              <p class="copyright">&copy; 2020 yuta niduka</p>
            </div>
        </div>
      </footer>
  </body>
</html>
