
  <div class="row center text-center">
    <div class="col-md-4 col-md-offset-4">
      <h2 class="page-header text-center border-bottom">職種一覧・追加</h2>
      <%= form_with(model:[@job], local: true) do |f| %>
        <div class="form-group">
          <%= f.label :"職種名" %>
          <%= f.text_field :name, class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :"１時間当たりの単価" %>
          <%= f.text_field :amount, class:'form-control' %>
        </div>
        <%= f.submit '登録', class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="row center">
    <div class="col-md-4 col-md-offset-4">
      <table class="table">
        <thead>
          <tr>
            <th>No.</th>
            <th>職種</th>
            <th>金額</th>
            <th></th>
          </tr>
        </thead>
        <% @jobs.each do |job| %>
          <tbody>
            <tr>
              <td><%= job.id %></td>
              <td><%= job.name %></td>
              <td><%= job.amount %></td>
              <% if user_signed_in? %>
                <td><%= link_to("編集",edit_job_path(job), {class: "btn btn-success"})%></td>
              <% end %>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>