
<div class="row">
  <div class="col-md-6 col-md-offset-3"> 
  <div class="form-group">
    <%= form_with(model:[@job], local: true) do |f| %>
  </div>
  <div class="form-group">
    <%= f.label :"職種:" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :"金額:" %>
    <%= f.text_field :amount, class: 'form-control' %>
  </div>
    <%= f.submit '更新', class: 'btn-success' %>
  </div>
<% end %>
