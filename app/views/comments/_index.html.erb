<% comments.each do |f| %>
  <div class="comments">
    <div class="comment-index">投稿日：<%= f.created_at.strftime('%Y/%m/%d') %></div>
    <div class="comment-user"> 投稿者：<%= f.user.family_name + f.user.first_name %></div>
    <% if user_signed_in? %>
      <% if f.user.id == current_user.id %>
        <%= link_to project_comment_path(f.project_id, f.id), method: :delete, remote: true, data: {confirm: "削除しますか？"} do %>
          <span class="panel-icon">
            <i class="fas fa-trash"></i>
          </span>
        <% end %>
      <% end %>
    <% end %>
    <div class="comment_title">投稿内容</div>
    <div class="comment_contents"><%= f.content %></div>
  </div>
<% end %>