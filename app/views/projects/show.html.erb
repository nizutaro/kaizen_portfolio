<div class="row show-page">
  <div class="col-md-4">
    <h2>プロジェクト詳細</h2>
    <table class="table table-striped">
      <tr><td>投稿日:<%= @project.created_at.strftime('%Y/%m/%d') %></td></tr>
      <tr><td>No.<%= @project.id %> プロジェクト名:<%= @project.name %></td></tr>
      <tr><td>提案内容:<%= @project.content %></td></tr>
      <tr><td>提案者:<%= attachment_image_tag @project.user, :image, :fill, 100, 100, format: 'jpeg', fallback:image_path('no-img.jpg'), size:'40x40', class: "img-circle pull-left profile-thumb" %>
      <%= @project.user.family_name + @project.user.farst_name %></td>
      </tr>
      <tr><td>ステータス:<%= @project.status %></td></tr>
      <tr><td>開始予定日:<%= @project.start_date %></td></tr>
      <tr><td>終了予定日:<%= @project.start_date %></td></tr>
      <tr><td>作業の月回数：<%= @project.number_of_month %>回</td></tr>
      <tr>
        <td>１回当たりの削減時間：
          <% if @project.reducation_time >= 60 %>
            <%= @project.reducation_time / 60 %>時間 
            <%= @project.reducation_time % 60 %>分/回
          <% else %>
            <%= @project.reducation_time %>分/回  
          <% end %>
         
          年間削減：
          <% if @project.number_of_month * @project.reducation_time * 12 >= 60 %>
            <%=@project.number_of_month * @project.reducation_time * 12 / 60  %>時間 
            <%= @project.number_of_month * @project.reducation_time * 12  % 60 %>分</td>
          <% else %>
            <%= project.number_of_month * project.reducation_time * 12%>分
          <% end %>
        </td>
      </tr>
      <tr>
        <td>いいね <i class="fa fa-heart" aria-hidden="true" style="color: red;">
          <%= @project.favorites.count %></i>件
          コメント<i class="fas fa-comment"> <%= @project.comments.count %></i>件
        </td>
      </tr>
    </table>
  </div>
  <div class="col-md-4">
    <h2>コメント一覧</h2>
    <div id='comments_area'>
      <%= render partial: 'comments/index', locals: { comments: @comments } %>
    </div>
      <% if user_signed_in? %>
          <%= render partial: 'comments/form', locals: { project: @project, comment: @comment } %>
      <% end %>
    <div class="pagenate">
      <%= paginate @comments %>
    </div>
  </div>
</div>