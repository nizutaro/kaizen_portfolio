<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <h1>プロジェクト詳細</h1>
    </div>
    <div class="col-md-4 col-md-offset-4">
    <h5>投稿日:<%= @project.created_at.strftime('%Y/%m/%d') %></h5>
    </div>
  </div>
  <div class="row">
      <table class="table table-striped">
        <tr>
          <td><div>プロジェクトNo.<%= @project.id %></div></td>
          <td><div>プロジェクト名:<%= @project.name %></div></td>
         </tr>
         <tr>
          <td>提案者</td>
        </tr>
        <tr>  
          <td>
             <%= attachment_image_tag @project.user, :image, :fill, 100, 100, format: 'jpeg', fallback:'no-img.jpg', size:'40x40' %>
            <%= @project.user.family_name + @project.user.farst_name %>
          </td>
        </tr>
        <tr>
          <td><div>提案内容:<%= @project.content %></div></td>
          <td><div>ステータス:<%= @project.status %></div></td>
          <td><div>開始日:<%= @project.start_date %></div></td>
          <td><div>終了日:<%= @project.start_date %></div></td>
          <td><div>作業の月回数：<%= @project.number_of_month %>回</div></td>
          <td><div>改善による削減時間：<%= @project.reducation_time %>時間</div></td>
        <tr>
      </table>
    </div>
  </div>
</div>