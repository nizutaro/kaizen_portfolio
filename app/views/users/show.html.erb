  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h2><%= @user.family_name + @user.farst_name %>のページ</h2>
        <%= attachment_image_tag @user, :image, :fill, 60, 60,size: "60x60", class: "img-circle profile-thumb center-block", fallback: "no-img.jpg"%>
        <% if @user == current_user %>
          <%= link_to "プロフィールを編集",edit_user_path, {class: "btn btn-success"} %>
        <% end %>
      <div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <main role="main" class="col-md-12 ml-sm-auto col-lg-12 px-4">
        
        <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

        <h2 class= "text-center">最近提案したプロジェクト</h2>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>タイトル</th>
                  <th>改善時間</th>
                  <th>いいね数</th>
                  <th>コメント数</th>
                  <th>ステータス</th>
                </tr>
              </thead>
              <tbody>
                <% @projects.each do |project| %>
                    <tr>
                      <td><%= project.id %></td>
                      <td><%= project.name %></td>
                      <td><%= project.reducation_time %>分</td>
                      <td><%= project.favorites.count %>件</td>
                      <td><%= project.comments.count %>件</td>
                    <td><%= project.status %></td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
  </div>

<!-- Graphs --><canvas id="myChart" width="900" height="400"></canvas>
<script>
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ["4月","5月","6月","7月","8月","9月","10月","11月","12月"],
        datasets: [{
            label: "削減総時間",
            data: [<%= @reducation_time %>],
            backgroundColor: 'rgba(255, 99, 132, 1.0)',
            borderColor: 'rgba(255, 50, 132, 1.0)',
            fill: false
        }]
    },
    options: {
        title:  {
          display: true,
          text: "提案数"
        }
    }
});
</script>
  </body>
