  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h2><%= @user.family_name + @user.farst_name %>のページ</h2>
        <%= attachment_image_tag @user, :image, :fill, 60, 60,size: "60x60", class: "img-circle profile-thumb center-block", fallback: "no-img.jpg"%>
        <% if @user == current_user %>
          <%= link_to "プロフィールを編集",edit_user_path, {class: "btn btn-success"} %>
        <% end %>
      <div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 ml-sm-auto col-lg-12 px-4">
        <h3 class="text-center">これまでの提案数：<%= @projects_count %>件</h3>
        <h2 class= "text-center">最近提案したプロジェクト</h2>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>タイトル</th>
                  <th>改善時間</th>
                  <th>いいね数</th>
                  <th>コメント数</th>
                  <th>ステータス</th>
                </tr>
              </thead>
              <tbody>
                <% @projects.each do |project| %>
                    <tr>
                      <td><%= project.id %></td>
                      <td><%= link_to project.name, project_path(project) %></td>
                      <td>
                        <% if project.reducation_time >= 60 %>
                        <%= project.reducation_time / 60 %>時間 
                        <%= project.reducation_time % 60 %>分</td>
                        <% else %>
                          <%= project.reducation_time %>分
                        <% end %>
                      </td>
                      <td><%= project.favorites.count %>件</td>
                      <td><%= project.comments.count %>件</td>
                    <td><%= project.status %></td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
  </div>
  </body>
